.h1 {
  font-size: 20px;
  font-weight: bold;
  text-align: center;
  padding: 40px;
  margin-bottom: 50rpx;
}

.li {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 50rpx;
}

.li .title {
  font-weight: bold;
}

.li .p {
  text-align: left;
}

.li-price {
  font-weight: bold;
  display: flex;
  justify-content: space-around;
  margin-top: 90rpx;
}

.li-price .title {
 margin-left: 60rpx;
}

.li-price .price {
  margin-right: 60rpx;
}

.btn-ghost {
  color: rgb(161, 161, 161);
  border: 4rpx solid rgb(161, 161, 161);
  padding: 17rpx 70rpx;
  /* padding-top: 5rpx; */
  border-radius: 10rpx;
  font-weight: bold;
  opacity: 1;
  transition: opacity 0.3s ease;
  width: 540rpx;
  text-align: center; 
  font-size: 22rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 90rpx auto;
}
