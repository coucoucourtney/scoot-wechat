.h1 {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  margin-bottom: 70rpx;
  margin-top: 20rpx;
}

.btn-black {
  width: 2000rpx;
  color: white;
  background-color: black;
  padding: 20rpx;
  padding-top: 25rpx;
  border-radius: 10rpx;
  font-weight: bold;
  transition: opacity 0.3s ease;
  font-size: 12px;
  margin-top: 70rpx;
}

.new-form {
  text-align: center;
  margin-top: 100rpx;
}

input {
  margin: 25rpx auto;
  padding: 15rpx;
  border: 2px solid black;
  width: 600rpx;
  text-align: left;
  font-size: 12px;
}