<view class='new-form'>
  <view class="h1">Add a scooter</view>

  <form class="booking-form" bindsubmit="createScooter">
    <input name="model" placeholder="Model"></input>
    <input name="year" placeholder="Year"></input>
    <input name="battery" placeholder="Battery"></input>
    <input name="top_speed" placeholder="Top speed in km/h"></input>
    <input name="location" placeholder="Location"></input>
    <input name="price" placeholder="Price in RMB"></input>
    
    <image name="picture" src='{{tempFilePath}}'></image>
    <button class='button-light' form-type="submit" bindtap="takePhoto">UPLOAD A PICTURE</button>
    <button class='btn-black' form-type="submit" bindtap="" data-id="{{user.id}}">SUBMIT</button>
  </form>
</view>
